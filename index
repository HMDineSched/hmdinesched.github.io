    <label>
      Date:
      <select id="dateFilter"></select>
    </label>
  </div>

  <div class="quick-view">
    <h2>Today’s Roster (East)</h2>
    <ul id="todayRoster">
      <!-- dynamically populated -->
    </ul>
  </div>

  <div class="table-wrapper">
    <table id="scheduleTable">
      <thead>
        <tr>
          <th>Location</th>
          <th>Name</th>
          <th>Date</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <!-- SCHEDULE DATA INSERTED HERE -->
        <tr><td>East</td><td>Jerry</td><td>2025-06-25</td><td>11a–6p</td></tr>
        <tr><td>East</td><td>Max</td><td>2025-06-25</td><td>12p–close</td></tr>
        <tr><td>West/Grand</td><td>Alice</td><td>2025-06-25</td><td>9a–3p</td></tr>
        <tr><td>Oasis</td><td>Rey</td><td>2025-06-26</td><td>11a–2p</td></tr>
        <tr><td>TBD</td><td>Jess</td><td>2025-06-26</td><td>2p–close</td></tr>
      </tbody>
    </table>
  </div>

  <script>
    const table = document.getElementById('scheduleTable');
    const dateFilter = document.getElementById('dateFilter');
    const locationFilter = document.getElementById('locationFilter');
    const todayRoster = document.getElementById('todayRoster');

    function getUniqueDates() {
      const rows = Array.from(table.querySelectorAll('tbody tr'));
      const dates = new Set();
      rows.forEach(row => dates.add(row.cells[2].textContent));
      return Array.from(dates).sort();
    }

    function filterTable() {
      const selectedDate = dateFilter.value;
      const selectedLocation = locationFilter.value;
      const rows = Array.from(table.querySelectorAll('tbody tr'));
      todayRoster.innerHTML = '';
      rows.forEach(row => {
        const [loc, name, date, time] = Array.from(row.cells).map(c => c.textContent);
        const match = (loc === selectedLocation && date === selectedDate);
        row.style.display = match ? '' : 'none';
        if (match && date === new Date().toISOString().slice(0, 10)) {
          const li = document.createElement('li');
          li.textContent = `${name} — ${time}`;
          todayRoster.appendChild(li);
        }
      });
    }

    function initFilters() {
      const dates = getUniqueDates();
      dateFilter.innerHTML = dates.map(d => `<option value="${d}">${d}</option>`).join('');
      const today = new Date().toISOString().slice(0, 10);
      if (dates.includes(today)) {
        dateFilter.value = today;
      }
      filterTable();
    }

    locationFilter.addEventListener('change', filterTable);
    dateFilter.addEventListener('change', filterTable);

    initFilters();
  </script>
</body>
