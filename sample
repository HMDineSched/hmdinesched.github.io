  <p>Schedule last updated: <span id="last-updated"></span></p>

  <script>
    const sampleEntries = [
      { name: "Jerry", date: "2025-06-24", time: "10am–6p", location: "East" },
      { name: "Jerry", date: "2025-06-25", time: "10am–6p", location: "East" },
      { name: "Jerry", date: "2025-06-26", time: "10am–6p", location: "East" },
      { name: "Jerry", date: "2025-06-27", time: "10am–6p", location: "East" },
      { name: "Jerry", date: "2025-06-28", time: "10am–6p", location: "East" },
      { name: "Nathan", date: "2025-06-26", time: "11am–6p", location: "East" },
      { name: "Nathan", date: "2025-06-27", time: "11am–6p", location: "East" },
      { name: "Nathan", date: "2025-06-28", time: "11am–6p", location: "East" },
      { name: "Nathan", date: "2025-06-29", time: "11am–4p", location: "East" },
      { name: "Nathan", date: "2025-06-30", time: "11am–6p", location: "East" },
    ];

    function renderTable(entries, tbody) {
      tbody.innerHTML = '';
      for (const e of entries) {
        const tr = document.createElement('tr');
        tr.innerHTML = `<td>${e.location}</td><td>${e.name}</td><td>${e.date}</td><td>${e.time}</td>`;
        tbody.appendChild(tr);
      }
    }

    function getAZTodayISO() {
      const now = new Date();
      const utc = now.getTime() + now.getTimezoneOffset() * 60000;
      const azOffset = -7 * 60; // Arizona is UTC-7
      const azDate = new Date(utc + azOffset * 60000);
      return azDate.toISOString().split('T')[0];
    }

    function filterEntries(entries, date, location) {
      return entries.filter(e => {
        const matchDate = e.date === date;
        const matchLoc = (location === 'All') || (e.location === location);
        return matchDate && matchLoc;
      });
    }

    function updateQuickView() {
      const date = document.getElementById('date-picker').value;
      const location = document.getElementById('location-picker').value;
      const filtered = filterEntries(sampleEntries, date, location);
      renderTable(filtered, document.querySelector('#quick-view-table tbody'));
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      const today = getAZTodayISO();
      document.getElementById('date-picker').value = today;
      document.getElementById('location-picker').value = 'East';

      document.getElementById('date-picker').addEventListener('change', updateQuickView);
      document.getElementById('location-picker').addEventListener('change', updateQuickView);

      renderTable(sampleEntries, document.querySelector('#full-schedule-table tbody'));
      updateQuickView();

      document.getElementById('last-updated').textContent = new Date().toLocaleString();
    });
  </script>
</body>
