<script>
  function getAZTodayISO() {
    const now = new Date();
    const utcTime = now.getTime() + (now.getTimezoneOffset() * 60000);
    const azTime = new Date(utcTime - (7 * 60 * 60000));
    return azTime.toISOString().split('T')[0];
  }

  // Set date picker default value to Arizona date
  document.addEventListener('DOMContentLoaded', () => {
    const picker = document.getElementById('date-picker');
    picker.value = getAZTodayISO();

    // Set initial week label to Monday of the current week for demo
    // Here we hardcode Monday 2025-06-22 as example
    document.getElementById('week-label').textContent = 'Week of 2025-06-22';
  });
</script>
